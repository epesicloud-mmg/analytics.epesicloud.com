    <script>
        // API Base URL
        const API_BASE = '/api/admin';
        
        // Global state
        let appState = {
            user: null,
            organizations: [],
            projects: [],
            activeOrganization: null,
            activeProject: null,
            isLoading: true,
            sidebarCollapsed: false
        };

        // Page config from server (if provided)
        const serverPageConfig = {
            isCollapsed: {{#if pageConfig.isCollapsed}}true{{else}}false{{/if}},
            activeProjectId: {{#if pageConfig.activeProjectId}}"{{pageConfig.activeProjectId}}"{{else}}null{{/if}},
            pageType: {{#if pageConfig.pageType}}"{{pageConfig.pageType}}"{{else}}"default"{{/if}},
            showProjectSelector: {{#if pageConfig.showProjectSelector}}true{{else}}false{{/if}},
            requiresOrganization: {{#if pageConfig.requiresOrganization}}true{{else}}false{{/if}}
        };
        
        // Apply initial sidebar state if provided
        if (serverPageConfig && serverPageConfig.isCollapsed !== undefined) {
            appState.sidebarCollapsed = serverPageConfig.isCollapsed;
        }
        
        // Set active project from server config
        if (serverPageConfig && serverPageConfig.activeProjectId) {
            appState.activeProjectId = serverPageConfig.activeProjectId;
        }

        // Utility functions
        function showToast(message, type = 'success') {
            const toast = document.createElement('div');
            const bgColor = type === 'success' ? 'bg-green-500' : type === 'error' ? 'bg-red-500' : 'bg-blue-500';
            
            toast.className = `${bgColor} text-white px-6 py-3 rounded-md shadow-lg flex items-center space-x-2 transform transition-all duration-300 translate-x-full`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'exclamation-triangle' : 'info'}-circle"></i>
                <span>${message}</span>
                <button onclick="this.parentElement.remove()" class="ml-4 text-white hover:text-gray-200">
                    <i class="fas fa-times"></i>
                </button>
            `;
            
            document.getElementById('toast-container').appendChild(toast);
            
            // Animate in
            setTimeout(() => toast.classList.remove('translate-x-full'), 100);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                if (toast.parentElement) {
                    toast.classList.add('translate-x-full');
                    setTimeout(() => toast.remove(), 300);
                }
            }, 5000);
        }

        // Sidebar functions
        function toggleSidebar() {
            appState.sidebarCollapsed = !appState.sidebarCollapsed;
            updateSidebarState();
        }
        
        function updateSidebarState() {
            const sidebar = document.getElementById('sidebar');
            const mainWrapper = document.getElementById('main-wrapper');
            
            if (appState.sidebarCollapsed) {
                sidebar.classList.remove('sidebar-expanded');
                sidebar.classList.add('sidebar-collapsed');
                mainWrapper.classList.remove('content-expanded');
                mainWrapper.classList.add('content-collapsed');
            } else {
                sidebar.classList.remove('sidebar-collapsed');
                sidebar.classList.add('sidebar-expanded');
                mainWrapper.classList.remove('content-collapsed');
                mainWrapper.classList.add('content-expanded');
            }
        }
        
        function toggleMobileSidebar() {
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('mobile-backdrop');
            
            sidebar.classList.toggle('sidebar-mobile-open');
            backdrop.classList.toggle('hidden');
        }
        
        function closeMobileSidebar() {
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('mobile-backdrop');
            
            sidebar.classList.remove('sidebar-mobile-open');
            backdrop.classList.add('hidden');
        }

        // API functions
        async function apiCall(endpoint, method = 'GET', data = null) {
            const options = {
                method,
                headers: { 'Content-Type': 'application/json' },
                credentials: 'same-origin'
            };
            
            if (data && method !== 'GET') {
                options.body = JSON.stringify(data);
            }
            
            const response = await fetch(endpoint, options);
            return await response.json();
        }

        async function loadUserData() {
            try {
                const response = await apiCall('/api/admin/me');
                if (response.success) {
                    appState.user = response.user;
                    appState.organizations = response.user.organizations || [];
                    
                    // Update user UI elements
                    updateUserUI();
                    
                    // Determine active organization
                    if (response.user.profile?.last_active_organization) {
                        appState.activeOrganization = response.user.profile.last_active_organization;
                    } else if (appState.organizations.length > 0) {
                        appState.activeOrganization = appState.organizations[0];
                    }
                    
                    console.log('User data loaded:', {
                        organizations: appState.organizations.length,
                        activeOrg: appState.activeOrganization?.id,
                        userEmail: response.user.email
                    });
                    
                    return true;
                }
                return false;
            } catch (error) {
                console.error('Failed to load user data:', error);
                return false;
            }
        }

        function updateUserUI() {
            if (!appState.user) return;
            
            const email = appState.user.email || 'user@example.com';
            const name = extractNameFromEmail(email);
            const initials = getInitials(email);
            
            // Update header user info
            document.getElementById('user-name').textContent = name;
            document.getElementById('user-role').textContent = 'Admin';
            document.getElementById('user-avatar').textContent = initials;
            
            // Update dropdown user info
            document.getElementById('dropdown-user-name').textContent = name;
            document.getElementById('dropdown-user-email').textContent = email;
            
            // Update sidebar user info
            document.getElementById('sidebar-user-name').textContent = name;
            document.getElementById('sidebar-user-email').textContent = email;
            document.getElementById('sidebar-user-avatar').textContent = initials;
        }
        
        function extractNameFromEmail(email) {
            const username = email.split('@')[0];
            return username.split('.').map(part => 
                part.charAt(0).toUpperCase() + part.slice(1)
            ).join(' ');
        }
        
        function getInitials(email) {
            const name = extractNameFromEmail(email);
            return name.split(' ').map(part => part.charAt(0)).join('').substring(0, 2).toUpperCase();
        }

        async function loadOrganizationProjects(orgId) {
            try {
                console.log('Loading projects for organization:', orgId);
                const response = await apiCall(`/api/admin/organizations/${orgId}/projects`);
                
                if (response.success) {
                    appState.projects = response.data || [];
                    console.log('Projects loaded:', appState.projects.length);
                    
                    // Set active project if specified in server config
                    if (appState.activeProjectId) {
                        appState.activeProject = appState.projects.find(p => p.id === appState.activeProjectId);
                    }
                    
                    return appState.projects;
                } else {
                    console.error('Failed to load projects:', response.message);
                    appState.projects = [];
                    return [];
                }
            } catch (error) {
                console.error('Error loading organization projects:', error);
                appState.projects = [];
                return [];
            }
        }

        // Organization management
        function updateOrganizationUI() {
            const hasOrgs = appState.organizations.length > 0;
            
            // Hide loading state
            document.getElementById('org-selector-loading')?.classList.add('hidden');
            
            if (hasOrgs) {
                // Show organization selector
                document.getElementById('org-selector-wrapper')?.classList.remove('hidden');
                document.getElementById('no-orgs-state')?.classList.add('hidden');
                
                // Update current org name
                const currentOrgName = document.getElementById('current-org-name');
                if (currentOrgName && appState.activeOrganization) {
                    currentOrgName.textContent = appState.activeOrganization.name;
                }
                
                // Populate dropdown
                updateOrganizationDropdown();
                
            } else {
                // Show no organizations state
                document.getElementById('org-selector-wrapper')?.classList.add('hidden');
                document.getElementById('no-orgs-state')?.classList.remove('hidden');
            }
        }

        function updateProjectUI() {
            const hasProjects = appState.projects.length > 0;
            
            if (hasProjects && appState.activeOrganization) {
                // Show project selector
                document.getElementById('project-selector-wrapper')?.classList.remove('hidden');
                document.getElementById('no-projects-state')?.classList.add('hidden');
                
                // Update current project name
                const currentProjectName = document.getElementById('current-project-name');
                if (currentProjectName && appState.activeProject) {
                    currentProjectName.textContent = appState.activeProject.name;
                } else if (currentProjectName) {
                    currentProjectName.textContent = 'Select Project';
                }
                
                // Update dropdown - prioritize active project if set
                updateProjectDropdown();
                
            } else if (appState.activeOrganization) {
                // Show no projects state
                document.getElementById('project-selector-wrapper')?.classList.add('hidden');
                document.getElementById('no-projects-state')?.classList.remove('hidden');
            } else {
                // Hide both if no organization
                document.getElementById('project-selector-wrapper')?.classList.add('hidden');
                document.getElementById('no-projects-state')?.classList.add('hidden');
            }
        }

        function updateOrganizationDropdown() {
            const dropdown = document.getElementById('org-dropdown-content');
            if (!dropdown) return;
            
            dropdown.innerHTML = appState.organizations.map(org => `
                <div class="org-item p-3 hover:bg-gray-50 cursor-pointer rounded-lg transition-colors ${org.id === appState.activeOrganization?.id ? 'bg-indigo-50 border border-indigo-200' : ''}" 
                     onclick="switchOrganization('${org.id}')">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center flex-1">
                            <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center mr-3">
                                <i class="fas fa-building text-indigo-600 text-sm"></i>
                            </div>
                            <div class="flex-1">
                                <div class="font-medium text-gray-900 text-sm">${org.name}</div>
                                <div class="text-xs text-gray-500">${org.project_count || 0} projects</div>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            ${org.id === appState.activeOrganization?.id ? '<i class="fas fa-check text-indigo-600 text-sm"></i>' : ''}
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function updateProjectDropdown() {
            const dropdown = document.getElementById('project-dropdown-content');
            if (!dropdown) return;
            
            // Sort projects to show active project first
            const sortedProjects = [...appState.projects];
            if (appState.activeProject) {
                const activeIndex = sortedProjects.findIndex(p => p.id === appState.activeProject.id);
                if (activeIndex > 0) {
                    const activeProject = sortedProjects.splice(activeIndex, 1)[0];
                    sortedProjects.unshift(activeProject);
                }
            }
            
            dropdown.innerHTML = sortedProjects.map(project => `
                <div class="project-item p-3 hover:bg-gray-50 cursor-pointer rounded-lg transition-colors ${project.id === appState.activeProject?.id ? 'bg-purple-50 border border-purple-200' : ''}" 
                     onclick="navigateToProject('${project.id}')">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center flex-1">
                            <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
                                <i class="fas fa-project-diagram text-purple-600 text-sm"></i>
                            </div>
                            <div class="flex-1">
                                <div class="font-medium text-gray-900 text-sm">${project.name}</div>
                                <div class="text-xs text-gray-500">${project.api_key_count || 0} API keys</div>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            ${project.id === appState.activeProject?.id ? '<i class="fas fa-check text-purple-600 text-sm"></i>' : ''}
                            <i class="fas fa-external-link-alt text-gray-400 text-xs"></i>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function renderRecentProjects() {
            const nav = document.getElementById('recent-projects-nav');
            if (!nav) return;
            
            const recentProjects = appState.projects.slice(0, 3);
            
            nav.innerHTML = recentProjects.map(project => {
                const projectName = project.name || 'Untitled Project';
                const isActive = project.id === appState.activeProject?.id;
                return `
                    <a href="/project/${project.id}" class="tooltip group flex items-center px-2 py-2 text-sm font-medium rounded-md ${isActive ? 'bg-purple-50 text-purple-700' : 'text-gray-700 hover:bg-gray-50 hover:text-gray-900'}">
                        <span class="w-2 h-2 rounded-full ${isActive ? 'bg-purple-500' : 'bg-indigo-500'} mr-3 flex-shrink-0"></span>
                        <span class="sidebar-text truncate">${projectName}</span>
                        <span class="tooltip-text">${projectName}</span>
                    </a>
                `;
            }).join('');
        }

        // Navigation functions
        function navigateToProject(projectId) {
            window.location.href = `/project/${projectId}`;
        }

        async function switchOrganization(orgId) {
            try {
                const response = await apiCall('/api/admin/switch-organization', 'POST', { orgId });
                
                if (response.success) {
                    // Update state
                    appState.activeOrganization = appState.organizations.find(org => org.id === orgId);
                    appState.activeProject = null; // Clear active project when switching orgs
                    
                    // Load projects for new organization
                    await loadOrganizationProjects(orgId);
                    
                    // Update UI
                    updateOrganizationUI();
                    updateProjectUI();
                    renderRecentProjects();
                    
                    // Close dropdown
                    document.getElementById('org-dropdown')?.classList.add('hidden');
                    
                    // Trigger organization change event for page-specific handling
                    window.dispatchEvent(new CustomEvent('organizationChanged', { 
                        detail: { organization: appState.activeOrganization } 
                    }));
                    
                    showToast('Organization switched successfully!', 'success');
                } else {
                    showToast(response.message || 'Failed to switch organization', 'error');
                }
            } catch (error) {
                console.error('Error switching organization:', error);
                showToast('Failed to switch organization', 'error');
            }
        }

        // Organization creation
        async function handleCreateOrganization(e) {
            e.preventDefault();
            
            const formData = {
                name: document.getElementById('orgName').value,
                description: document.getElementById('orgDescription').value
            };
            
            try {
                const response = await apiCall('/api/admin/organizations', 'POST', formData);
                
                if (response.success) {
                    closeModal('newOrgModal');
                    document.getElementById('newOrgForm').reset();
                    
                    // Reload data and switch to new organization
                    await loadUserData();
                    await switchOrganization(response.data.id);
                    
                    showToast('Organization created successfully!', 'success');
                } else {
                    showToast(response.message || 'Failed to create organization', 'error');
                }
            } catch (error) {
                console.error('Create organization error:', error);
                showToast('Failed to create organization', 'error');
            }
        }

        // Project creation
        async function handleCreateProject(e) {
            e.preventDefault();
            
            if (!appState.activeOrganization) {
                showToast('Please select an organization first', 'error');
                return;
            }
            
            const formData = {
                name: document.getElementById('projectName').value,
                description: document.getElementById('projectDescription').value,
                organizationId: appState.activeOrganization.id
            };
            
            try {
                const response = await apiCall('/api/admin/projects', 'POST', formData);
                
                if (response.success) {
                    closeModal('newProjectModal');
                    document.getElementById('newProjectForm').reset();
                    
                    // Reload projects
                    await loadOrganizationProjects(appState.activeOrganization.id);
                    
                    // Update UI
                    updateProjectUI();
                    renderRecentProjects();
                    
                    // Trigger project creation event for page-specific handling
                    window.dispatchEvent(new CustomEvent('projectCreated', { 
                        detail: { project: response.data } 
                    }));
                    
                    showToast('Project created successfully!', 'success');
                } else {
                    showToast(response.message || 'Failed to create project', 'error');
                }
            } catch (error) {
                console.error('Create project error:', error);
                showToast('Failed to create project', 'error');
            }
        }

        function openModal(modalId) {
            document.getElementById(modalId)?.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeModal(modalId) {
            document.getElementById(modalId)?.classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Initialize layout
        async function initializeLayout() {
            console.log('Initializing layout...');
            
            // Apply initial sidebar state
            updateSidebarState();
            
            try {
                // Load user data first
                const userLoaded = await loadUserData();
                
                if (userLoaded) {
                    // Update organization UI
                    updateOrganizationUI();
                    
                    // Load projects for active organization
                    if (appState.activeOrganization) {
                        await loadOrganizationProjects(appState.activeOrganization.id);
                    }
                    
                    // Update project UI and render
                    updateProjectUI();
                    renderRecentProjects();
                    
                    console.log('Layout initialized successfully');
                } else {
                    console.error('Failed to load user data');
                    showToast('Failed to load user data', 'error');
                }
                
            } catch (error) {
                console.error('Failed to initialize layout:', error);
                showToast('Failed to load application', 'error');
            } finally {
                appState.isLoading = false;
            }
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Layout DOM loaded, initializing...');
            
            // Initialize layout
            initializeLayout();
            
            // Sidebar toggle - desktop
            document.getElementById('sidebar-toggle').addEventListener('click', toggleSidebar);
            
            // Mobile menu toggle
            document.getElementById('mobile-menu-toggle').addEventListener('click', toggleMobileSidebar);
            document.getElementById('mobile-backdrop').addEventListener('click', closeMobileSidebar);
            
            // Organization selector
            document.getElementById('org-selector')?.addEventListener('click', (e) => {
                e.stopPropagation();
                document.getElementById('org-dropdown')?.classList.toggle('hidden');
            });

            // Project selector
            document.getElementById('project-selector')?.addEventListener('click', (e) => {
                e.stopPropagation();
                document.getElementById('project-dropdown')?.classList.toggle('hidden');
            });

            // User menu
            document.getElementById('user-menu-button')?.addEventListener('click', (e) => {
                e.stopPropagation();
                document.getElementById('user-dropdown')?.classList.toggle('hidden');
            });

            // Close dropdowns when clicking outside
            document.addEventListener('click', (e) => {
                const orgSelector = document.getElementById('org-selector');
                const orgDropdown = document.getElementById('org-dropdown');
                const projectSelector = document.getElementById('project-selector');
                const projectDropdown = document.getElementById('project-dropdown');
                const userButton = document.getElementById('user-menu-button');
                const userDropdown = document.getElementById('user-dropdown');
                
                if (orgSelector && orgDropdown && !orgSelector.contains(e.target) && !orgDropdown.contains(e.target)) {
                    orgDropdown.classList.add('hidden');
                }
                
                if (projectSelector && projectDropdown && !projectSelector.contains(e.target) && !projectDropdown.contains(e.target)) {
                    projectDropdown.classList.add('hidden');
                }
                
                if (userButton && userDropdown && !userButton.contains(e.target) && !userDropdown.contains(e.target)) {
                    userDropdown.classList.add('hidden');
                }
            });
            
            // Form submissions
            document.getElementById('newOrgForm')?.addEventListener('submit', handleCreateOrganization);
            document.getElementById('newProjectForm')?.addEventListener('submit', handleCreateProject);
            
            // Close modal when clicking outside
            window.addEventListener('click', function(event) {
                const orgModal = document.getElementById('newOrgModal');
                const projectModal = document.getElementById('newProjectModal');
                
                if (event.target === orgModal) {
                    closeModal('newOrgModal');
                }
                if (event.target === projectModal) {
                    closeModal('newProjectModal');
                }
            });
        });

        // Make functions globally available for views
        window.SnappyLearn = {
            switchOrganization,
            navigateToProject,
            getActiveOrganization: () => appState.activeOrganization,
            getActiveProject: () => appState.activeProject,
            getOrganizations: () => appState.organizations,
            getProjects: () => appState.projects,
            getUserProfile: () => appState.user,
            apiCall,
            showToast,
            openModal,
            closeModal,
            loadOrganizationProjects,
            updateProjectUI,
            renderRecentProjects,
            toggleSidebar,
            setSidebarState: (collapsed) => {
                appState.sidebarCollapsed = collapsed;
                updateSidebarState();
            }
        };
        
        console.log('Snappy Learn layout initialized');
    </script>
</body>
